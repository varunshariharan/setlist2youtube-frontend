{
  "manifest_version": 3,
  "name": "Setlist2YouTube",
  "version": "0.1.0",
  "description": "Convert a setlist.fm page into a YouTube playlist in one click.",
  "permissions": [
    "tabs", 
    "activeTab", 
    "storage", 
    "scripting", 
    "identity"
  ],
  "host_permissions": [
    "https://www.setlist.fm/*",
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "${GOOGLE_CLIENT_ID}",
    "scopes": ["openid email profile"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Setlist2YouTube",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.setlist.fm/*"],
      "js": ["src/lib/inject.js", "contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
