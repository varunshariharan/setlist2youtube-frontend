{
  "manifest_version": 3,
  "name": "Know The Show",
  "version": "0.1.0",
  "description": "Discover and enjoy music from concert setlists. Convert any setlist.fm page into a YouTube playlist in one click.",
  "permissions": [
    "webNavigation", 
    "tabs", 
    "activeTab", 
    "storage", 
    "scripting", 
    "identity",
    "alarms"
  ],
  "host_permissions": [
    "https://www.setlist.fm/*",
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "710891621158-7v44loj77qcmr37qb0h3le1iop32he5o.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/youtube"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Know The Show",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.setlist.fm/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
